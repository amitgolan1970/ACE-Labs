<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@mipmap/ace"
            android:id="@+id/ivAceLabs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:gravity="center" android:layoutDirection="ltr" android:textDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAce0"
            style="@style/ace_style"/>

        <TextView
            android:id="@+id/tvAce1"
            style="@style/ace_style"/>

        <TextView
            android:id="@+id/tvAce2"
            style="@style/ace_style"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:gravity="center" android:layoutDirection="ltr" android:textDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabs0"
            style="@style/labs_style"/>

        <TextView
            android:id="@+id/tvLabs1"
            style="@style/labs_style"/>

        <TextView
            android:id="@+id/tvLabs2"
            style="@style/labs_style"/>

        <TextView
            android:id="@+id/tvLabs3"
            style="@style/labs_style"/>

    </LinearLayout>


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#177ee6"
        android:id="@+id/sb"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ibLogoSoundOff"
        android:src="@mipmap/ace_logo"/>


</LinearLayout>